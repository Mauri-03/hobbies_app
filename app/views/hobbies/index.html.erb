<div class="d-flex justify-content-center align-items-center flex-column">
  <div class="main-title m-4 align-self-start">
    <h1>Explore</h1>
  </div>
  <div class="col-12">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control string required border-radius",
          placeholder: "Find a hobby",
          id: "search_query"
        %>
        <button name="button" type="submit" class="btn btn-flat border-radius">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
  <div class="cards my-4 ml-4 mr-4">
      <% if @hobbies.any? %>
        <% @hobbies.each do |hobby| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://image.freepik.com/free-vector/happy-woman-growing-houseplants-female-character-standing-cozy-home-garden-holding-pot-with-plant-vector-illustration-greenery-gardening-hobby-home-decor-botany_74855-8415.jpg)">
            <%= link_to hobby.category, hobby_path(hobby) %>
            <p><%= hobby.description %></p>
            <% case hobby.level %>
              <% when 1 %>
                <small><span class="card-badge badge badge-dark">Rookie</span></small>
              <% when 2 %>
                <small><span class="card-badge badge badge-dark">Good</span></small>
              <% when 3 %>
                <small><span class="card-badge badge badge-dark">Master</span></small>
              <% end %>
          </div>
        <% end %>
  </div>
  <div class="container-empty-state">
      <% else %>
        <h5 class="empty-state mt-4">No hobbies found, please try again ðŸ‘»</h5>
      <% end %>
  </div>
</div>
