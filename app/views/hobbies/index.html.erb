<div class="d-flex justify-content-center align-items-center flex-column">
  <div class="main-title m-4 align-self-start">
    <h1>Explore</h1>
  </div>
  <div class="col-12">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control string required border-radius",
          placeholder: "Find a hobby ...",
          id: "search_query"
        %>
        <button name="button" type="submit" class="btn btn-flat border-radius">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
  <div class="cards my-4 ml-4 mr-4">
      <% if @hobbies.any? %>
        <% @hobbies.each do |hobby| %>
          <% case hobby.level %>
            <% when 1 %>
              <div class="card-hobby" id="hobby-explorer" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/djlmbrvcx/image/upload/v1605231758/rookie_z2txe4.jpg); border-style: none; box-shadow: 0 0 15px rgba(0,0,0,0.2);">
                <h4><%= link_to hobby.category, hobby_path(hobby) %></h4>
                <p style="color: white;"><%= hobby.description %></p>
                <small><span class="badge badge-pill badge-lvl-one">Rookie</span></small>
            <% when 2 %>
              <div class="card-hobby" id="hobby-explorer" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/djlmbrvcx/image/upload/v1605231872/good_g4o4uj.jpg); border-style: none; box-shadow: 0 0 15px rgba(0,0,0,0.2);">
                <h4><%= link_to hobby.category, hobby_path(hobby) %></h4>
                <p style="color: white;"><%= hobby.description %></p>
                <small><span class="badge badge-pill badge-lvl-two">Good</span></small>
              <% when 3 %>
              <div class="card-hobby" id="hobby-explorer" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/djlmbrvcx/image/upload/v1605231872/master_c0yvwt.jpg); border-style: none; box-shadow: 0 0 15px rgba(0,0,0,0.2);">
                <h4><%= link_to hobby.category, hobby_path(hobby) %></h4>
                <p style="color: white;"><%= hobby.description %></p>
                <small><span class="badge badge-pill badge-lvl-three">Master</span></small>
              <% end %>
          </div>
        <% end %>
  </div>
  <div class="container-empty-state">
      <% else %>
        <h5 class="empty-state mt-4">No hobbies found, please try again ðŸ‘»</h5>
      <% end %>
  </div>
</div>