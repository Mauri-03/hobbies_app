<div class="main-title m-4">
  <h1>Explore</h1>
</div>
<div class="cards ml-4 mr-4">
    <% if @hobbies.any? %>
      <% @hobbies.each do |hobby| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://image.freepik.com/free-vector/happy-woman-growing-houseplants-female-character-standing-cozy-home-garden-holding-pot-with-plant-vector-illustration-greenery-gardening-hobby-home-decor-botany_74855-8415.jpg)">
          <%= link_to hobby.title, hobby_path(hobby) %>
          <p><%= hobby.description %></p>
          <small><span class="badge badge-dark"><%= hobby.level %></span></small>
        </div>
      <% end %>
</div>
    <% else %>
      <p class="empty-state text-center">No hobbies found ðŸ‘»</p>
    <% end %>

